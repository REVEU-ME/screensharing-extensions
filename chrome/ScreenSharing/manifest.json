{
  "name" : "OpenTok Screen Sharing",
  "author": "TokBox, Inc.",
  "version" : "2.0",
  "manifest_version" : 2,
  "minimum_chrome_version": "34",
  "description" : "This extension will enable screen sharing for your Creatr live-stream",
  "homepage_url": "http://creatr.me/",
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.reveu.me/*",
      "https://*.creatr.me/*",
      "http://localhost:3000/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
